<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.tud.nhd.petimo.view.fragments.DrawerFragment"
    android:background="@color/navigationBarColor">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/drawer_header_photo"
        android:alpha="0.7"
        android:layout_marginBottom="@dimen/pane_padding">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/item_monitor"
        android:gravity="center_vertical"
        style="@style/PetimoTheme.Light.DrawerItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PetimoTheme.Light.DrawerItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_monitor_24dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            style="@style/PetimoTheme.Light.DrawerItemText"
            android:text="@string/menu_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_monitored_tasks"
        android:gravity="center_vertical"
        style="@style/PetimoTheme.Light.DrawerItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PetimoTheme.Light.DrawerItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_monitored_tasks_24dp"/>

        <TextView
            style="@style/PetimoTheme.Light.DrawerItemText"
            android:text="@string/menu_monitored_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_statistics"
        android:gravity="center_vertical"
        style="@style/PetimoTheme.Light.DrawerItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PetimoTheme.Light.DrawerItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_statistics_24dp"/>

        <TextView
            style="@style/PetimoTheme.Light.DrawerItemText"
            android:text="@string/menu_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_manage_tasks"
        android:gravity="center_vertical"
        style="@style/PetimoTheme.Light.DrawerItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PetimoTheme.Light.DrawerItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_manage_tasks_24dp"/>

        <TextView
            style="@style/PetimoTheme.Light.DrawerItemText"
            android:text="@string/menu_manage_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_settings"
        android:gravity="center_vertical"
        style="@style/PetimoTheme.Light.DrawerItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/PetimoTheme.Light.DrawerItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer_settings_24dp"/>

        <TextView
            style="@style/PetimoTheme.Light.DrawerItemText"
            android:text="@string/menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</LinearLayout>
