<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.tud.nhd.petimo.view.fragments.ModeOffFragment">


    <!-- Header -->
    <FrameLayout
        app:theme="@style/PetimoTheme.Light.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/title_monitoring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_title_highlight" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="@color/background_title_underline" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/pane_padding"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="60">

            <TextView
                android:text="@string/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/textViewCatTask"/>

            <TextView
                android:text="@string/colon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/textViewDate" />

            <TextView
                android:text="@string/colon_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/textViewStartTime" />

        </LinearLayout>

        <Button
            android:text="@string/button_stop_monitor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/textViewCat"
            android:layout_alignBottom="@+id/spinnerTask"
            android:layout_alignParentRight="true"
            android:id="@+id/buttonStop"
            android:layout_weight="40"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="0dp"
        android:background="@color/background_title_highlight" />

    <!-- Chronometer -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:id="@+id/chronometer2"
            android:gravity="center_horizontal"/>


    </RelativeLayout>


</LinearLayout>
