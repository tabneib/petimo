<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="de.tud.nhd.petimo.view.fragments.EditBlocksMenuFragment"
    android:layout_margin="@dimen/pane_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox_selected_tasks"
            android:text="@string/option_show_selected_tasks"
            android:width="0dp"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/checkbox_show_empty_days"
            android:text="@string/option_show_empty_days"
            android:width="0dp"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_title_highlight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox_remember_options"
            android:text="@string/option_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/textview_lock"
                android:text="@string/option_swipe_to_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/sub_pane_padding"/>
            <CheckBox
                android:id="@+id/checkbox_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>


    <!-- Menu separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_title_highlight" />

</LinearLayout>
