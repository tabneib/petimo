<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/statistics_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_list_items"
    card_view:cardBackgroundColor="@color/background_primary"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/PetimoTheme.Wrapper">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/pane_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewCatName"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/middle_text_margin"
                    android:textSize="@dimen/middle_big_text_size"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/button_edit_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_setting_selector_24dp"
                    android:layout_margin="@dimen/middle_text_margin"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/task_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@color/windowBackground"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_title" />
            <ImageView
                android:id="@+id/button_add_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_selector_36dp"
                android:layout_margin="@dimen/middle_text_margin"
                android:layout_gravity="right"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

